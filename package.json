{
  "name": "@lucascaro/wreck",
  "version": "0.0.6",
  "description": "Web Recursive and Efficiently Crawl and checK",
  "publishConfig": {
    "access": "public"
  },
  "main": "bin/cli.js",
  "bin": {
    "wreck": "./bin/cli.js"
  },
  "scripts": {
    "clean": "rm -rf lib/*",
    "lint": "tslint --project tsconfig.json -c tslint.json src/**/*.ts",
    "build": "npm run clean && tsc -p . && ef-tspm",
    "build:production": "npm run clean && ttsc -p . && ef-tspm",
    "watch": "nodemon -e ts --exec 'tsc -p . && ef-tspm || true'",
    "prepublishOnly": "npm run build",
    "release": "npm run test && npm run build:production && npm version patch && git push --follow-tags",
    "test": "ts-node ./node_modules/jest/bin/jest.js --verbose"
  },
  "author": "Lucas Caro <lucascaro@gmail.com>",
  "license": "GPL-3",
  "devDependencies": {
    "@ef-carbon/tspm": "^2.2.5",
    "@types/cheerio": "^0.22.9",
    "@types/debug": "0.0.31",
    "@types/jest": "^23.3.5",
    "@types/node": "^10.12.0",
    "@types/node-fetch": "^2.1.2",
    "@types/redis": "^2.8.7",
    "@types/split2": "^2.1.6",
    "cheerio": "^1.0.0-rc.2",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "redis": "^2.8.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "ttypescript": "^1.5.5",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "console-commando": "^6.0.0-alpha.3",
    "debug": "^4.1.0",
    "immutable": "^4.0.0-rc.11",
    "node-fetch": "^2.2.0",
    "p-ratelimit": "^0.9.5",
    "split2": "^3.0.0"
  }
}
