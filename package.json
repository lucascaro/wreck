{
  "name": "wreck",
  "version": "1.0.0",
  "description": "Web Recursive and Efficiently Crawl and checK",
  "main": "bin/cli.js",
  "bin": {
    "wreck": "./bin/cli.js"
  },
  "scripts": {
    "clean": "rm -rf lib/*",
    "lint": "tslint --project tsconfig.json -c tslint.json src/**/*.ts",
    "build": "npm run clean && tsc -p . && ef-tspm",
    "watch": "nodemon -e ts --exec 'tsc -p . && ef-tspm || true'",
    "prepublishOnly": "npm run build",
    "release": "npm version patch && npm publish",
    "test": "ts-node ./node_modules/jest/bin/jest.js --verbose"
  },
  "author": "Lucas Caro <lucascaro@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@ef-carbon/tspm": "^2.2.5",
    "@types/cheerio": "^0.22.9",
    "@types/debug": "0.0.31",
    "@types/jest": "^23.3.5",
    "@types/node": "^10.11.3",
    "@types/redis": "^2.8.7",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "redis": "^2.8.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "@types/node-fetch": "^2.1.2",
    "cheerio": "^1.0.0-rc.2",
    "console-commando": "^4.0.0",
    "debug": "^4.1.0",
    "node-fetch": "^2.2.0",
    "p-ratelimit": "^0.9.5"
  }
}
