{
  "name": "@lucascaro/wreck",
  "version": "0.0.8",
  "description": "Web Recursive and Efficiently Crawl and checK",
  "publishConfig": {
    "access": "public"
  },
  "main": "bin/cli.js",
  "bin": {
    "wreck": "./bin/cli.js"
  },
  "scripts": {
    "clean": "rm -rf lib/*",
    "lint": "tslint --project tsconfig.json -c tslint.json src/**/*.ts",
    "build": "npm run clean && ttsc -p . ",
    "build:production": "npm run clean && ttsc -p . ",
    "watch": "nodemon -e ts --exec 'ttsc -p . || true'",
    "prepublishOnly": "npm run build",
    "release": "npm run test && npm run build:production && npm version patch && git push --follow-tags",
    "test": "ts-node ./node_modules/jest/bin/jest.js --verbose"
  },
  "author": "Lucas Caro <lucascaro@gmail.com>",
  "license": "GPL-3",
  "devDependencies": {
    "@ef-carbon/tspm": "^2.2.5",
    "@types/cheerio": "^0.22.13",
    "@types/debug": "^4.1.5",
    "@types/ioredis": "^4.0.17",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/node-fetch": "^2.5.0",
    "@types/redis": "^2.8.13",
    "@types/split2": "^2.1.6",
    "cheerio": "^1.0.0-rc.3",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.3.0",
    "tslint": "^5.20.0",
    "tslint-config-airbnb": "^5.11.1",
    "ttypescript": "^1.5.7",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@zerollup/ts-transform-paths": "^1.7.3",
    "console-commando": "^6.0.4",
    "debug": "^4.1.1",
    "immutable": "^4.0.0-rc.12",
    "node-fetch": "^2.6.0",
    "p-ratelimit": "^0.11.0",
    "split2": "^3.1.1"
  }
}
