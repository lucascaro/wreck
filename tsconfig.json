{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "outDir": "lib",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["src/*"],
      "@helpers/*": ["src/helpers/*"],
      "@processes/*": ["src/processes/*"],
      "@plugins/*": ["src/plugins/*"]
    },
    "plugins": [
      {
        "transform": "./src/plugins/ts_transform_remove_debug.ts",
        "remove": ["debug", "this.debug"]
      }
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
