{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "outDir": "lib",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["src/*"],
      "@helpers/*": ["src/helpers/*"],
      "@processes/*": ["src/processes/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
